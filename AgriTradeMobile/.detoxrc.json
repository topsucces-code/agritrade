{
  "testRunner": "jest",
  "runnerConfig": "e2e/jest.config.js",
  "configurations": {
    "android.emu.debug": {
      "type": "android.emulator",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
      "device": {
        "avdName": "Pixel_3a_API_30_x86"
      }
    },
    "android.emu.release": {
      "type": "android.emulator",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
      "device": {
        "avdName": "Pixel_3a_API_30_x86"
      }
    },
    "ios.sim.debug": {
      "type": "ios.simulator",
      "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/AgriTradeMobile.app",
      "build": "xcodebuild -workspace ios/AgriTradeMobile.xcworkspace -scheme AgriTradeMobile -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
      "device": {
        "type": "iPhone 12"
      }
    },
    "ios.sim.release": {
      "type": "ios.simulator",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/AgriTradeMobile.app",
      "build": "xcodebuild -workspace ios/AgriTradeMobile.xcworkspace -scheme AgriTradeMobile -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
      "device": {
        "type": "iPhone 12"
      }
    }
  }
}