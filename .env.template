# AgriTrade Production Environment Variables
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0
PORT=3000
DOMAIN=agritrade.ai
ALLOWED_ORIGINS=https://agritrade.ai,https://www.agritrade.ai

# Database Configuration
MONGODB_ROOT_USERNAME=agritrade_admin
MONGODB_ROOT_PASSWORD=change_this_strong_password
MONGODB_DATABASE=agritrade_prod
MONGODB_URI=mongodb://agritrade_admin:change_this_strong_password@mongodb:27017/agritrade_prod?authSource=admin

# Redis Configuration
REDIS_PASSWORD=redis_strong_password
REDIS_URL=redis://:redis_strong_password@redis:6379

# Authentication & Security
JWT_SECRET=super_secure_jwt_secret_key_change_this
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
START_TIME=$(date -Iseconds)

# External API Keys - Replace with actual keys
GOOGLE_CLOUD_PROJECT_ID=your-google-project-id
OPENWEATHER_API_KEY=your_openweather_api_key
NASA_POWER_API_KEY=your_nasa_power_api_key
MAPBOX_API_KEY=your_mapbox_api_key
FAO_API_KEY=your_fao_api_key

# Communication Services
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=your_africastalking_username
AFRICASTALKING_SHORT_CODE=your_short_code
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# AWS Configuration
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=agritrade-prod-images

# Docker Port Mappings
BACKEND_PORT=3000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Monitoring & Analytics
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
GRAFANA_SECRET_KEY=grafana_secret_key_change_this
ELASTICSEARCH_PASSWORD=elastic_secure_password

# PostgreSQL for Grafana
POSTGRES_USER=grafana_user
POSTGRES_PASSWORD=postgres_secure_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=agritrade-backups

# Notification Settings
ALERT_EMAIL=alerts@agritrade.ai
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@agritrade.ai
SMTP_PASSWORD=email_app_password

# Feature Flags
FEATURE_QUALITY_ANALYSIS=true
FEATURE_DYNAMIC_PRICING=true
FEATURE_INTELLIGENT_MATCHING=true
FEATURE_SMS_NOTIFICATIONS=true
FEATURE_WHATSAPP_INTEGRATION=true
FEATURE_WEATHER_INTEGRATION=true
FEATURE_GEOSPATIAL_SEARCH=true