# AgriTrade AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ===================================
# APPLICATION SETTINGS
# ===================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# ===================================
# DATABASE CONFIGURATION
# ===================================
MONGODB_URI=mongodb://localhost:27017/agritrade-dev
MONGODB_TEST_URI=mongodb://localhost:27017/agritrade-test
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# GITHUB INTEGRATION
# ===================================
# GitHub Personal Access Token for API access
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, workflow, write:packages
GITHUB_TOKEN=ghp_your_new_token_here
GITHUB_REPO_OWNER=topsucces-code
GITHUB_REPO_NAME=agritrade
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# ===================================
# GOOGLE CLOUD SERVICES
# ===================================
# Google Vision API for crop quality analysis
GOOGLE_VISION_API_KEY=your-google-vision-api-key
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ===================================
# AWS SERVICES
# ===================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=agritrade-images
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.com

# ===================================
# COMMUNICATION SERVICES
# ===================================
# Africa's Talking for SMS/Voice services
AFRICASTALKING_API_KEY=your-africastalking-api-key
AFRICASTALKING_USERNAME=your-username

# Twilio (alternative SMS provider)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_BUSINESS_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ===================================
# PAYMENT SERVICES
# ===================================
# Orange Money API
ORANGE_MONEY_CLIENT_ID=your-orange-money-client-id
ORANGE_MONEY_CLIENT_SECRET=your-orange-money-secret

# MTN Mobile Money
MTN_MOMO_API_KEY=your-mtn-momo-api-key
MTN_MOMO_USER_ID=your-mtn-user-id
MTN_MOMO_SUBSCRIPTION_KEY=your-subscription-key

# ===================================
# EXTERNAL DATA APIS
# ===================================
# Weather data
OPENWEATHER_API_KEY=your-openweather-api-key

# Mapbox for logistics
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# World Bank / FAO data APIs
WORLD_BANK_API_KEY=your-world-bank-key

# ===================================
# MONITORING & LOGGING
# ===================================
DATADOG_API_KEY=your-datadog-api-key
SENTRY_DSN=your-sentry-dsn

# ===================================
# DOCKER & DEPLOYMENT
# ===================================
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-token

# ===================================
# DEVELOPMENT TOOLS
# ===================================
SNYK_TOKEN=your-snyk-token
CODECOV_TOKEN=your-codecov-token